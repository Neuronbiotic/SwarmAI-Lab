{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SwarmAI-Lab experiment configuration",
  "type": "object",
  "required": ["metadata", "simulation"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string"}
      }
    },
    "simulation": {
      "type": "object",
      "required": ["num_agents", "initial_states", "rule", "steps"],
      "additionalProperties": false,
      "properties": {
        "num_agents": {"type": "integer", "minimum": 1},
        "initial_states": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "number"}
        },
        "rule": {"type": "string", "enum": ["average", "majority"]},
        "steps": {"type": "integer", "minimum": 1},
        "seed": {"type": "integer", "minimum": 0}
      }
    },
    "sweeps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "overrides"],
        "additionalProperties": false,
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "overrides": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "initial_states": {
                "type": "array",
                "minItems": 1,
                "items": {"type": "number"}
              },
              "rule": {"type": "string", "enum": ["average", "majority"]},
              "steps": {"type": "integer", "minimum": 1},
              "seed": {"type": "integer", "minimum": 0},
              "num_agents": {"type": "integer", "minimum": 1}
            }
          }
        }
      }
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "directory": {"type": "string", "minLength": 1},
        "save_history": {"type": "boolean"}
      }
    }
  }
}
